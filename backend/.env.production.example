# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL) - PRODUCTION
# ⚠️ CHANGE THESE CREDENTIALS IN PRODUCTION!
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/bebang_pack_meal_prod?schema=public

# JWT Authentication - PRODUCTION
# ⚠️ GENERATE STRONG RANDOM SECRETS!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_HEX_STRING
JWT_REFRESH_EXPIRES_IN=7d

# CORS - PRODUCTION
# Set to your production frontend URL
CORS_ORIGIN=https://your-domain.com

# WebSocket - PRODUCTION
WS_PORT=3001

# Logging
LOG_LEVEL=info

# Security
# Enable HTTPS in production
HTTPS_ENABLED=true